<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<p class="counter">
  You have accessed this pages <%= pluralize(@counter, 'time') %>
  <% if @counter > 5 %>
    thanks a lot!
  <% end %>
</p>

<h1>Your Pragmatic Catalog</h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <%= link_to line_items_path(product_id: product.id), method: :post, remote: true do %>
            <%= image_tag(product.image_url) %>
          <% end %>
          <h2><%= product.title %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price) %>
            <%= button_to 'Add to Cart', line_items_path(product_id: product.id), remote: true %>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>